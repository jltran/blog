{{>_site-head}}
  <body>
    {{> _header}}
    <main id="main" role="main">
        
        <div class="content">
          <div class="page-content">
          <div class="title-content">

            <h1 style="color:#333; margin-left:0.5em;">{{this.title}}</h1>

            
            <span class="small-caps">Posted {{moment this.posted fromNow=true}} ago</span>
          </div>
          <div class="post">
            {{#markdown}}
              {{> body }}
            {{/markdown}}      
          </div>
          </div>
        </div>
    </main>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="{{assets}}/js/app.js"></script>
  </body>
</html>